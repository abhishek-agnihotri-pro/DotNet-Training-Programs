@model IEnumerable<MVC_EDUHUB.ViewModel.FeedbackViewModel>

@{
    ViewData["Title"] = "Feedbacks";
    Layout = "~/Views/Shared/_LayoutEducator.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Feedbacks</h1>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.UserName)</th>
                            <th>@Html.DisplayNameFor(model => model.feedback)</th>
                            <th>@Html.DisplayNameFor(model => model.Date)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.UserName)</strong>
                                </td>
                                <td>
                                    <p class="mb-0">@Html.DisplayFor(modelItem => item.feedback)</p>
                                </td>
                                <td>
                                    <span class="text-muted">@item.Date.ToString("MMM dd, yyyy")</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
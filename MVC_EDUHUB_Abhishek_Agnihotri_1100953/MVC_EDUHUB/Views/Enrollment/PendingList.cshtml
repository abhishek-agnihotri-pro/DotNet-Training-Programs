@model IEnumerable<MVC_EDUHUB.ViewModel.EnrollmentViewModel>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_LayoutEducator.cshtml";
}

<h1>Pending Enrollments</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EnrollmentId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnrollmentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnrollmentId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnrollmentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <button type="submit" class="btn btn-success">
                            @Html.ActionLink("Accept", "AcceptEnrollment", new { id = item.EnrollmentId }, new { @class = "text-white text-decoration-none" })
                        </button>
                        <button type="submit" class="btn btn-danger">
                            @Html.ActionLink("Reject", "RejectEnrollment", new { id = item.EnrollmentId }, new { @class = "text-white text-decoration-none" })
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        There are currently no pending enrollments.
    </div>
}
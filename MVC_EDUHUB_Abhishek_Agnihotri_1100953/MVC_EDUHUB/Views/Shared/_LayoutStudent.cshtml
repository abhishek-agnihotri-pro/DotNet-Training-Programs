<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eduhub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .navbar-brand {
            font-weight: bold;
            color: #007bff !important;
        }
        .nav-link {
            font-weight: 500;
        }
        .nav-link:hover {
            color: #007bff !important;
        }
        .btn-logout {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-logout:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Eduhub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Student" asp-action="StudentIndex">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Enquiry" asp-action="MyEnquiries" asp-route-id="@TempData["Userid"]">Enquiries</a>
                            @{ TempData.Keep("Userid"); }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Teacher" asp-action="ViewAllCourses">Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Enrollment" asp-action="MyEnrollments" asp-route-id="@TempData["Userid"]">Enrollments</a>
                            @{ TempData.Keep("Userid"); }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Enrollment" asp-action="Create">Enroll</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Feedback" asp-action="Create">Feedback</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm btn-logout" asp-controller="Student" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @* <div class="container">
            &copy; 2024 - Eduhub
        </div> *@
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>